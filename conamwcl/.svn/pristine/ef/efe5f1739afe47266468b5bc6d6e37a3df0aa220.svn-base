  //button oggi
  .button-oggi {
    border-color: #ffffff !important;
    color: #ffffff !important;
    background-color: #0153a9 !important;
    border-radius: 5px !important;
  }
  
  .button-oggi:hover {
    &:disabled {
      border-color: #ffffff !important;
      color: #ffffff !important;
      box-shadow: 0 0 40px 40px #0153a9 inset;
      border-radius: 5px !important;
    }
  
    transition: box-shadow 10ms ease-in-out,
    color 700ms ease-in-out;
    border-color: #ffffff !important;
    box-shadow: 0 0 40px 40px #356ea9 inset;
    color: #ffffff !important;
    border-radius: 5px !important;
    .text-oggi-conam{
      color: #356ea9;
    }
  }
  
  .text-oggi-conam {
    color: #0153a9;
  }
  
  
  .btn-glyphicon-oggi {
    padding: 8px;
    background: #ffffff;
    border: 1px solid #0153a9;
    margin-right: 4px;
  }
  
  .btn-oggi {
    display: inline-block;
    padding: 0px 13px 2px 8px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 4px;
  
    &:disabled {
      cursor: not-allowed;
      filter: alpha(opacity=65);
      opacity: .65;
    }
  }
