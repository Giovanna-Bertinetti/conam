//success
.button-green {
    border-color: #0d8637 !important;
    color: #fff !important;
    background-color: #0d8637 !important;
    border-radius: 2px !important;
  }
  
.button-green:hover {
    &:disabled {
      border-color: #0d8637 !important;
      color: #fff !important;
      box-shadow: 0 0 40px 40px #0d8637 inset;
      border-radius: 2px !important;
    }
  
    transition: box-shadow 100ms ease-in-out,
    color 700ms ease-in-out;
    border-color: #0b692c !important;
    box-shadow: 0 0 40px 40px #0b692c inset;
    color: #fff !important;
    border-radius: 2px !important;
}
.text-green-conam {
    color: #0d8637;
}


